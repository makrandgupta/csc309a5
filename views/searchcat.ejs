<!doctype html>
<html>
<head>
	<% include partials/head %>
</head>
<body>
<div class="container">
	<header>
		<% include partials/header %>
	</header>
	<div class="jumbotron text-center">
		<form class="form-horizontal" action="/cats/search" method="post">
	
			<!-- Search box-->
			<div class="form-group">
				<div class="col-sm-2"></div>
			
				<!--Search button-->
				<div class="col-sm-1">
					<button type="submit" class="btn btn-default">Search</button>
				</div>
			
				<!--Search input-->
				<div class="col-sm-6">
					<input name="name" type="text" class="form-control" placeholder="Cat Name">
				</div>
			</div>

			<!--Search options-->
			<div class="form-group">
				<label class="col-sm-3 control-label">Needs walker?</label>
				<div class="col-sm-6">

					<!-- All cats-->
					<input name="walker" type="radio" value="all" checked='checked'>&nbsp All cats</input>
					&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
			
					<!-- Cats that need walkers-->
					<input name="walker" type="radio" value="needsWalker">&nbsp Cats that need walkers</input>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-3 control-label">Age</label>
				<div class="col-sm-2">
					
					<!-- Include age-->
					<input name="includeage" type="checkbox" "Checked"> Include age</input>
				</div>
				<div class="col-sm-2">

					<!-- minimum age-->
					Minimum: 
					<select name="minage">
						<option value="0">< 1</option>
						<% for (i = 1; i < 10; i++) {%>
							<option value="<%=i%>"><%=i%></option>
						<%}%>
						<option value="15">> 10</option>
					</select>
				</div>
				<div class="col-sm-2">

					<!-- maximum age-->
					Maximum: 
					<select name="maxage">
						<option value="0">< 1</option>
						<% for (i = 1; i < 10; i++) {%>
							<option value="<%=i%>"><%=i%></option>
						<%}%>
						<option value="15">> 15</option>
					</select>
				</div>
			</div>
		</form>
	</div>
</div>
</body>
</html>
